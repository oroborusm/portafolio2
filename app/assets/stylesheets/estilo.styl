colorao = #CC6633
colorados = #AC6B56
oscuro = #434142

@font-face {
    font-family: 'camptonlight';
    src: url('/assets/campton/campton.light-webfont.eot');
    src: url('/assets/campton/campton.light-webfont.eot?#iefix') format('embedded-opentype'),
         url('/assets/campton/campton.light-webfont.woff') format('woff'),
         url('/assets/campton/campton.light-webfont.ttf') format('truetype'),
         url('/assets/campton/campton.light-webfont.svg#camptonlight') format('svg');
    font-weight: normal;
    font-style: normal;

}




@font-face {
    font-family: 'camptonlight_italic';
    src: url('/assets/campton/campton.light.italic-webfont.eot');
    src: url('/assets/campton/campton.light.italic-webfont.eot?#iefix') format('embedded-opentype'),
         url('/assets/campton/campton.light.italic-webfont.woff') format('woff'),
         url('/assets/campton/campton.light.italic-webfont.ttf') format('truetype'),
         url('/assets/campton/campton.light.italic-webfont.svg#camptonlight_italic') format('svg');
    font-weight: normal;
    font-style: normal;

}

@font-face {
	font-family: 'icos';
	src:url('/assets/icos/icomoon.eot?ldq7ra');
	src:url('/assets/icos/icomoon.eot?#iefixldq7ra') format('embedded-opentype'),
		url('/assets/icos/icomoon.woff?ldq7ra') format('woff'),
		url('/assets/icos/icomoon.ttf?ldq7ra') format('truetype'),
		url('/assets/icos/icomoon.svg?ldq7ra#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}


body
	background #f5f5f5
	font-size 18px
	footer
		background #AC6B56
		color white
		padding 3rem 0
		text-align center
		a
			color #DDD
		.inner
			font-size 12px
	header
		background colorao
		height 140px
		margin 0 auto
		position fixed
		top 0
		width 100%
		z-index 10
		.contenedor
			margin 0 auto
			width 80%
			.logo
				position relative
				width 150px
				z-index 2
				figure
					margin 0
					width 145px
					img
						width 100%
		.oscuro
			background oscuro
			bottom 0
			height 34px
			position absolute
			width 100%
			z-index 1
			nav
				margin 0 auto
				width 80%
				ul
					float right
					margin 0
					padding 0
					li
						display inline-block
						margin-left 1em
						a
							color white
							line-height 34px
							font-family 'camptonlight'
	.fijo
		display block
		height 390px
		margin-top 140px
		opacity 1
		position relative
		width 100%
		z-index 1
		.bio
			margin-top 3.4em
			position fixed
			text-align center
			width 100%
			.slide
				position relative
				li
					height 3em
					figure
						margin 0
						padding 0
						position relative
						width 100%
						img
							width 180px
						figcaption
							width 100%
							p
								color white
								font-family 'camptonlight'
		.fijoImg
			background-attachment fixed
			background-image url('../assets/background2.jpg')
			background-position center center
			background-size cover
			display block
			height 100%
			width 100%
	main
		background #f5f5f5
		padding 2em 0
		position relative
		z-index 1
		section
			margin 0 auto
			width 80%
			.tools
				text-align center
				ul
					margin 0
					padding 0
					li
						display inline-block
						figure
							margin 0
							padding 0
							img
								filter grayscale(1)
								opacity .5
								transition .7s
								-webkit-filter grayscale(1)
								width 100px
								&:hover
									filter grayscale(0)
									opacity 1
									-webkit-filter grayscale(0)
		.contPag
			font-family 'camptonlight_italic'
			font-size 16px
			text-align center
			margin-top 3em
		.galeria
			background #666
			width 100%
			.contPost
				margin 0 auto
				padding 1rem 0
				width 80%
				.post-iterado
					display block
					font-size 0
					padding 0
					li
						display inline-block
						font-size 0
						margin 0
						overflow hidden
						padding 0
						position relative
						vertical-align top
						width 25%
						figure
							margin 0
							padding 0
							position relative
							img
								width 100%
						a
							background rgba(colorao, .8)
							bottom 0
							color white
							font-family 'camptonlight'
							font-size 16px
							height 100%
							line-height 100%
							opacity 0
							padding 40% 0 0 0
							position absolute
							text-align center
							top 0
							transition .5s ease-out
							width 100%
							&:hover
								opacity 1
								
		.internoPost
			margin-top 10em
			font-family 'camptonlight'
			//text-align center
			h2
			p
				color colorao
				text-align center
			ul
				font-size 0
				margin 0
				padding 0
				li
					display inline-block
					font-size 0
					margin 0
					overflow hidden
					padding 0
					position relative
					vertical-align top
					width 25%
					figure
						margin 0
						padding 0
						position relative
						img
							width 100%
						figcaption
							color oscuro
					.links
						background rgba(colorao, .8)
						bottom 0
						color green
						font-size 14px
						height 100%
						opacity 0
						padding 0
						position absolute
						top 0
						width 100%
						&:hover
							opacity 1
						a
							display block
							font-family 'camptonlight'
							text-align center
							width 100%
						.cerrar
							background oscuro
							bottom 1em
							border-radius 50%
							border 1px solid oscuro
							color white
							height 25px
							line-height 25px
							position absolute
							right 1em
							text-decoration none
							width 25px
						.titulo
							color white
							position absolute
							top 40%
			.postGal
				margin 0 auto
				padding 0
				position relative
				width 50%
				&:hover
					.botones
						opacity 1
				img
					width 100%
				.botones
					opacity 0
					position absolute
					transition .3s
					width 100%
					.back
						left 1em
						position absolute
						text-decoration none
						top 1em
						&:before
							color colorao
							content "\e666"
							font-family "icos"
					.edit
						position absolute
						right 1em
						text-decoration none
						top 1em
						&:before
							color colorao
							content "\e6fd"
							font-family "icos"

							

.bx-wrapper
	height 240px
.bx-start.active
.bx-pager-link.active
	background #EEE
	border 2px solid white
.bx-pager-link
	border 2px solid white
	border-radius 50%
	bottom 0
	display inline-block
	height .5rem
	position absolute
	text-indent -9999px
	vertical-align middle
	width .5rem
.bx-pager-item
	display inline-block
	margin 0 .4em 0 0
	&:nth-child(even)
		margin 0 0 0 .4em
.bx-prev
.bx-next
	display none


@media (max-width 1200px)
	body
		.fijo
			height 310

@media (max-width 600px)
	body
		main
			section
				width 90%
				.tools
					ul
						li
							figure
								img
									width 70px